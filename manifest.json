{
  "manifest_version": 2,
  "name": "X to FixUp",
  "version": "1.0",
  "description": "Replace X/Twitter links with FixupX links instead.",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "96": "icons/icon-96.png"
  },
  "data_collection_permissions": {
    "data_categories": [],
    "data_types": []
  }
}
