{
  "manifest_version": 2,
  "name": "X to FixUp",
  "version": "1.0",
  "description": "Replace X/Twitter links with FixupX links instead.",
  "permissions": ["clipboardWrite"],
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "96": "icons/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "xtofixup@example.com",
      "strict_min_version": "91.0",
      "data_collection_permissions": {
        "required": ["none"],
        "data_categories": [],
        "data_types": []
      }
    }
  }
}
